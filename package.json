{
  "name": "desktop-thing-for-spotify",
  "version": "1.1.1",
  "private": true,
  "main": "js/electron/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev -p 3003 -H 127.0.0.1 --turbopack\" \"electron .\"",
    "build": "npm run build:electron && next build && electron-builder",
    "build:electron": "tsc -p tsconfig.electron.json",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@supabase/supabase-js": "^2.84.0",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "electron-serve": "^3.0.0",
    "lucide-react": "^0.554.0",
    "motion": "^12.23.24",
    "next": "16.0.4",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "spotify-web-api-node": "^5.0.2",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@electron/asar": "^4.0.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.7",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "16.0.4",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.spotify.desktop-thing",
    "productName": "Desktop Thing for Spotify",
    "directories": {
      "output": "dist"
    },
    "files": [
      "js/**/*",
      "out/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "app/public"
      }
    ],
    "win": {
      "icon": "public/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "public/icon.ico",
      "target": "dmg"
    },
    "linux": {
      "icon": "public/icon.ico",
      "target": "AppImage"
    }
  }
}