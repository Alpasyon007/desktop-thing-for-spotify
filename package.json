{
	"name": "desktop-thing-for-spotify",
	"version": "1.1.0",
	"private": true,
	"main": "js/electron/main.js",
	"scripts": {
		"dev": "npm run build:electron && concurrently -n \"NEXT,ELECTRON\" -c \"yellow,blue\" --kill-others \"next dev -p 3003 -H 127.0.0.1 --turbopack\" \"electron .\"",
		"build": "npm run build:electron && next build && electron-builder",
		"build:electron": "tsc -p tsconfig.electron.json",
		"start": "next start",
		"lint": "next lint",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
		"format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\""
	},
	"dependencies": {
		"@ffmpeg/ffmpeg": "^0.12.10",
		"@headlessui/react": "^2.2.6",
		"@heroicons/react": "^2.2.0",
		"@radix-ui/react-checkbox": "^1.3.2",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-icons": "^1.3.2",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"@supabase/supabase-js": "^2.52.1",
		"@tanstack/react-table": "^8.21.3",
		"@tanstack/react-virtual": "^3.13.12",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.1",
		"electron-serve": "^2.1.1",
		"lucide-react": "^0.525.0",
		"motion": "^12.23.12",
		"next": "15.4.3",
		"next-themes": "^0.4.6",
		"postgres": "^3.4.7",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"spotify-web-api-node": "^5.0.2",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@electron/asar": "^4.0.1",
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"concurrently": "^9.2.0",
		"drizzle-kit": "^0.31.4",
		"electron": "^37.2.5",
		"electron-builder": "^26.0.12",
		"eslint": "^9",
		"eslint-config-next": "15.4.3",
		"prettier": "^3.6.2",
		"tailwindcss": "^4",
		"tsx": "^4.20.3",
		"tw-animate-css": "^1.3.6",
		"typescript": "^5"
	},
	"build": {
		"appId": "com.spotify.desktop-thing",
		"productName": "Desktop Thing for Spotify",
		"directories": {
			"output": "dist"
		},
		"files": [
			"js/**/*",
			"out/**/*",
			"public/**/*",
			"node_modules/**/*",
			"package.json"
		],
		"extraResources": [
			{
				"from": "public",
				"to": "app/public"
			}
		],
		"win": {
			"icon": "public/icon.ico",
			"target": "nsis"
		},
		"mac": {
			"icon": "public/icon.ico",
			"target": "dmg"
		},
		"linux": {
			"icon": "public/icon.ico",
			"target": "AppImage"
		}
	}
}